{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "allowUmdGlobalAccess": true,
        "types": [
            "node",
            "vite/client"
        ],
        "typeRoots": [
            "./node_modules/@types/",
            "./types",
            "./node_modules"
        ],
        "baseUrl": "src",
        "paths": {
            "api/*": [
                "api/*"
            ],
            "components/*": [
                "components/*"
            ],
            "constants/*": [
                "constants/*"
            ],
            "contexts/*": [
                "contexts/*"
            ],
            "infra/*": [
                "infra/*"
            ],
            "modules/*": [
                "modules/*"
            ],
            "store/*": [
                "store/*"
            ],
            "utils/*": [
                "utils/*"
            ],
            "assets/*": [
                "assets/*"
            ],
            "styles/*": [
                "styles/*"
            ]
        }
    },
    "include": [
        "src",
        "typings/**/*"
    ]
}